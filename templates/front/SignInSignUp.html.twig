
{% block body %}
    <title>{% block title %}Sign In and Sign Up!{% endblock %}</title>
    <!-- SignInSignUp style -->
    <link rel="stylesheet" href="{{asset('assets/css/style.css')}}">

    <div class="container" >
        <div class="forms-container">
            <div class="signin-signup" style="margin-top: 0px">

                {{ form_start(form) }}

                    <h2 class="title" >Sign up</h2>

                <p >First Name</p>
                {{ form_errors(form.firstName) }}
                    <div class="input-field" >

                        {{ form_label(form.firstName," ") }}

                        {{ form_widget(form.firstName, {'attr':{'class':'form-control p_input'}}) }}
                    </div>
                <p >Last Name</p>  {{ form_errors(form.lastName) }}
                <div class="input-field" >

                    {{ form_label(form.lastName," ") }}

                    {{ form_widget(form.lastName, {'attr':{'class':'form-control p_input'}}) }}
                </div>
                <p >UserName</p>     {{ form_errors(form.username) }}
                <div class="input-field">

                    {{ form_label(form.username," ") }}

                    {{ form_widget(form.username, {'attr':{'class':'form-control p_input'}}) }}
                </div>
                <p >Email</p>
                <div class="input-field">

                    {{ form_label(form.email," ") }}
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {'attr':{'class':'form-control p_input'}}) }}
                </div>
                <p >Password</p>{{ form_errors(form.password) }}
                <div class="input-field">

                    {{ form_label(form.password," ") }}

                    {{ form_widget(form.password, {'attr':{'class':'form-control p_input'}}) }}
                </div>
                <p >PhoneNumber</p> {{ form_errors(form.phoneNumber) }}
                <div class="input-field">

                    {{ form_label(form.phoneNumber," ") }}

                    {{ form_widget(form.phoneNumber, {'attr':{'class':'form-control p_input'}}) }}
                </div>
                <p >Gender</p> {{ form_errors(form.gender) }}
                <div class="input-field">

                    {{ form_label(form.gender," ") }}

                    {{ form_widget(form.gender, {'attr':{'class':'form-control p_input'}}) }}
                </div>
                <p >Role</p>  {{ form_errors(form.role) }}
                <div class="input-field">

                    {{ form_label(form.role," ") }}

                    {{ form_widget(form.role, {'attr':{'class':'form-control p_input'}}) }}
                </div>
                <div style="position: absolute;top: 81%;right: 80%">
                    {{ form_row(form.Confirm, {'attr': {'class' : 'btn btn-success btn-block enter-btn','style':'width:250px'}} ) }}
                </div>



                {{ form_end(form) }}
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3 style="font-size: 30px">Already have an account ?</h3>

                    <button class="btn transparent" style="margin-top: 20px" >
                        <a href="{{ path('app_user_login') }}">Login</a>

                    </button>
                </div>
                <img src="{{asset ('assets/img/log.svg') }}" class="image" alt="" />
            </div>

        </div>
    </div>

    <script src="{{asset('assets/js/app.js')}}"></script>

{% endblock %}